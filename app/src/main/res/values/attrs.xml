<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="unit" format="string" />
    <attr name="title" format="string" />
    <attr name="alarm" format="boolean" />
    <attr name="value" format="float" />
    <attr name="optimalMax" format="float" />
    <attr name="optimalMin" format="float" />
    <attr name="min" format="float" />
    <attr name="max" format="float" />
    <attr name="column" format="integer" />
    <attr name="isEqually" format="boolean" />

    <declare-styleable name="Tachometer">
        <attr name="max" />
        <attr name="min" />
        <attr name="optimalMax" />
        <attr name="value" />
        <attr name="optimalMin" />
        <attr name="alarm" />
        <attr name="unit" />
        <attr name="title" />
    </declare-styleable>

    <declare-styleable name="AutomaticLayout">
        <attr name="automatic_orientation">
            <flag name="horizontal" value="0" />
            <flag name="vertical" value="1" />
        </attr>
        <attr name="column" />
        <attr name="isEqually" />
    </declare-styleable>

    <declare-styleable name="SwipeMenuLayout">
        <!--是否开启侧滑，默认开启-->
        <attr name="isEnableSwipe" format="boolean"/>
        <!--true后菜单放置在左边， 默认放在右边-->
        <attr name="isEnableLeftMenu" format="boolean"/>
        <!--是否点击菜单内容后自动关闭   默认false不关闭-->
        <attr name="isClickMenuAndClose" format="boolean"/>
        <!--是否开启阻塞，默认是开启的，阻塞效果是 列表中当前有一个item的菜单已经被划出，
        想滑出第二个的时候，会先阻塞滑动的动作，把第一个先关掉，再次滑动才能划开第二个；
        不阻塞的话 滑动第二个item的同时，第二个item划开，第一个item同时关闭-->
        <attr name="isOpenChoke" format="boolean"/>
    </declare-styleable>
</resources>